import java.util.Scanner;
public class Main
    {
        public static void main(String args[])
        {
            int n,reverse=0;
            Scanner s=new Scanner(System.in);
            System.out.println("enter n value");
            n=s.nextInt();
            while(n!=0)
            {
             reverse=reverse*10+n%10;
             n=n/10;
            }
            System.out.println("reverse of a number="+reverse);
            
            
        }
    }

